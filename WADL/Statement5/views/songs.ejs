<!DOCTYPE html>
<html>
<head>
  <title>Song Details</title>
</head>
<link rel="stylesheet" href="/css/index.css" />
<body>
  <div class="container">
    <form method="get" action="/">
      <button type="submit" class="btn">Add New</button>
    </form>
  </div>
  <br>
  <% if (songs != null) { %>
  <table border="1px">
    <tr>
      <th>Song Name</th>
      <th>Film</th>
      <th>Music Director</th>
      <th>Singer</th>
      <th>Actor</th>
      <th>Actress</th>
    </tr>
    <% songs.forEach(function(song) { %>
    <tr>
      <td><%= song.Songname %></td>
      <td><%= song.Film %></td>
      <td><%= song.Music_director %></td>
      <td><%= song.singer %></td>
      <td><%= song.actor %></td>
      <td><%= song.actress %></td>
      <td>
        <form method="post" action="/deleteSong/<%= song._id %>">
          <button type="submit" class="btn">Delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </table>
  <% } %>

  <h1>Total Count of Songs: <%= totalCount %></h1>

</body>
</html>
